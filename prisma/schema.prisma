generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // or "postgresql", "sqlite"
  url      = env("DATABASE_URL")
}

model Envelope {
  id            String         @id @default(uuid())
  name          String
  denominations Denomination[] // One-to-many
  transactions  Transaction[]  // One-to-many
}

model Denomination {
  id         String   @id @default(uuid())
  value      Int
  quantity   Int
  envelopeId String
  envelope   Envelope @relation(fields: [envelopeId], references: [id])
}

model Transaction {
  id                String              @id @default(uuid())
  envelopeId        String
  envelope          Envelope            @relation(fields: [envelopeId], references: [id])
  type              TransactionType
  value             Int
  quantityChange    Int
  timestamp         DateTime            @default(now())
  denominationChange DenominationChange?
}

model DenominationChange {
  id             String         @id @default(uuid())
  transactionId  String         @unique
  transaction    Transaction    @relation(fields: [transactionId], references: [id])
  previousState  PreviousDenomination[]
  delta          DeltaDenomination?
}

model PreviousDenomination {
  id                   String   @id @default(uuid())
  value                Int
  quantity             Int
  denominationChangeId String
  denominationChange   DenominationChange @relation(fields: [denominationChangeId], references: [id])
}

model DeltaDenomination {
  id                   String   @id @default(uuid())
  value                Int
  quantity             Int
  denominationChangeId String   @unique
  denominationChange   DenominationChange @relation(fields: [denominationChangeId], references: [id])
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
}