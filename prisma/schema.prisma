generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // or "postgresql", "sqlite"
  url      = env("DATABASE_URL")
}

model Envelope {
  id            String         @id @default(uuid())
  name          String
  denominations Denomination[] // One-to-many
  transactions  Transaction[]  // One-to-many
}

model Denomination {
  id         String   @id @default(uuid())
  value      Int
  quantity   Int
  envelopeId String
  envelope   Envelope @relation(fields: [envelopeId], references: [id])
}

model Transaction {
  id                String              @id @default(uuid())
  envelopeId        String
  envelope          Envelope            @relation(fields: [envelopeId], references: [id])
  type              TransactionType
  previousState     PreviousDenomination[]
  delta             DeltaDenomination?
  timestamp         DateTime            @default(now())
}

model PreviousDenomination {
  id                   String   @id @default(uuid())
  value                Int
  quantity             Int
  transactionId        String
  transaction          Transaction @relation(fields: [transactionId], references: [id])
}

model DeltaDenomination {
  id                   String   @id @default(uuid())
  value                Int
  quantity             Int
  transactionId        String   @unique
  transaction          Transaction @relation(fields: [transactionId], references: [id])
}

enum TransactionType {
  DEPOSIT
  WITHDRAWAL
}

enum DenominationLabel {
  PHP_20
  PHP_50
  PHP_100
  PHP_200
  PHP_500
  PHP_1000
}